<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/altitude_unit_linear_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="5dp"
    android:paddingRight="20dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/altitude_unit_card_view_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#3A3A3A"
            app:cardCornerRadius="25dp"
            app:contentPadding="3dp"
            app:contentPaddingLeft="10dp"
            app:contentPaddingRight="10dp">

            <RadioButton
                android:id="@+id/altitude_unit_radioButton_ft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/menu_font"
                android:text="Feet"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/altitude_unit_card_view_2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#3A3A3A"
            app:cardCornerRadius="25dp"
            app:contentPadding="3dp"
            app:contentPaddingLeft="10dp"
            app:contentPaddingRight="10dp">

            <RadioButton
                android:id="@+id/altitude_unit_radioButton_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/menu_font"
                android:text="Meter"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>